<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5E3F1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/text_view_design"
            android:gravity="center"
            android:textColor="#373737"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/simple_button_design"
            android:onClick="clearAllFunction"
            android:text="AC"
            android:textColor="#fff"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/simple_button_design"
            android:onClick="deleteLastCharFunction"
            android:text="C"
            android:textColor="#fff"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/simple_button_design"
            android:onClick="numButtonFunction"
            android:text="."
            android:textColor="#fff"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/operator_button_design"
            android:onClick="operatorButtonFunction"
            android:text="+"
            android:textColor="#fff"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="1"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="2"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="3"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/operator_button_design"
            android:onClick="operatorButtonFunction"
            android:text="-"
            android:textColor="#fff"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="4"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="5"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="6"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/operator_button_design"
            android:onClick="operatorButtonFunction"
            android:text="X"
            android:textColor="#fff"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="7"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="8"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="9"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/operator_button_design"
            android:onClick="operatorButtonFunction"
            android:text="/"
            android:textColor="#fff"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.25"
            android:background="@drawable/num_button_design"
            android:onClick="numButtonFunction"
            android:text="0"
            android:textColor="#21318C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="0.75"
            android:background="@drawable/equal_button_design"
            android:onClick="equalButtonFunction"
            android:text="@string/equal_string"
            android:textColor="#fff"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>